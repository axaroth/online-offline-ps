<?xml version="1.0"?>
<object
    name="portal_controlpanel"
    meta_type="Plone Control Panel Tool"
    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
    i18n:domain="plone">

 <configlet
    title="Static version"
    action_id="static_version"
    appId="oops.staticdump"
    category="Products"
    condition_expr=""
    url_expr="string:${portal_url}/@@dump-controlpanel"
    visible="True"
    i18n:attributes="title">
  <permission>Manage portal</permission>
 </configlet>

 <configlet
    title="Update modification dates"
    action_id="update_modification_date"
    appId="oops.staticdump"
    category="Products"
    condition_expr=""
    url_expr="string:${portal_url}/@@update-modification-date"
    visible="True"
    i18n:attributes="title">
  <permission>Manage portal</permission>
 </configlet>
 
</object>
