<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:five="http://namespaces.zope.org/five"
    i18n_domain="collective.book">

  <!-- configure your content components here -->
  
  <!-- -*- extra stuff goes here -*- -->
  <class class=".voice.Voice">
    <require
        permission="zope2.View"
        interface="..interfaces.IVoice"
        />
    <require
        permission="cmf.ModifyPortalContent"
        set_schema="..interfaces.IVoice"
        />
  </class>
  <class class=".glossary.Glossary">
    <require
        permission="zope2.View"
        interface="..interfaces.IGlossary"
        />
    <require
        permission="cmf.ModifyPortalContent"
        set_schema="..interfaces.IGlossary"
        />
  </class>
  <class class=".chapter.Chapter">
    <require
        permission="zope2.View"
        interface="..interfaces.IChapter"
        />
    <require
        permission="cmf.ModifyPortalContent"
        set_schema="..interfaces.IChapter"
        />
  </class>
  <class class=".book.Book">
    <require
        permission="zope2.View"
        interface="..interfaces.IBook"
        />
    <require
        permission="cmf.ModifyPortalContent"
        set_schema="..interfaces.IBook"
        />
  </class>
  
  <class class=".fileannex.FileAnnex">
    <require
        permission="zope2.View"
        interface="..interfaces.IFileAnnex"
        />
    <require
        permission="cmf.ModifyPortalContent"
        set_schema="..interfaces.IFileAnnex"
        />
  </class>

  <class class=".imageannex.ImageAnnex">
    <require
        permission="zope2.View"
        interface="..interfaces.IImageAnnex"
        />
    <require
        permission="cmf.ModifyPortalContent"
        set_schema="..interfaces.IImageAnnex"
        />
  </class>
  
  <class class=".paragraph.Paragraph">
    <require
        permission="zope2.View"
        interface="..interfaces.IParagraph"
        />
    <require
        permission="cmf.ModifyPortalContent"
        set_schema="..interfaces.IParagraph"
        />
  </class>

</configure>
