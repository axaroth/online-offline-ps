<?xml version="1.0"?>
<object xmlns:i18n="http://xml.zope.org/namespaces/i18n" name="Book" meta_type="Factory-based Type Information with dynamic views" i18n:domain="collective.book">
  <property name="title" i18n:translate="">Book</property>
  <property name="description" i18n:translate="">Contains Chapters</property>
  <property name="content_icon">folder_icon.gif</property>
  <property name="content_meta_type">Book</property>
  <property name="product">collective.book</property>
  <property name="factory">addBook</property>
  <property name="immediate_view">atct_edit</property>
  <property name="global_allow">True</property>
  <property name="filter_content_types">True</property>
  <property name="allowed_content_types">
    <element value="Chapter"/>
    <element value="Glossary"/>
  </property>
  <property name="allow_discussion">False</property>
  <property name="default_view">book_toc_view</property>
  <property name="view_methods">
    <element value="book_toc_view"/>
    <element value="folder_contents"/>
  </property>
  <property name="default_view_fallback">False</property>
  <alias from="(Default)" to="(dynamic view)"/>
  <alias from="edit" to="atct_edit"/>
  <alias from="sharing" to="@@sharing"/>
  <alias from="view" to="(selected layout)"/>
  <action title="View" action_id="view" category="object" condition_expr="" url_expr="string:${folder_url}/" visible="True">
    <permission value="View"/>
  </action>
  <action title="Edit" action_id="edit" category="object" condition_expr="" url_expr="string:${object_url}/edit" visible="True">
    <permission value="Modify portal content"/>
  </action>
</object>
